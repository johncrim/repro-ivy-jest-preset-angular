{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    // Strict options
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2015",
    "module": "es2020",
    "types": [
      "tslib"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2020"
    ],
    "paths": {
      "@this/ui-lib/*": [
        "dist/ui-lib/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "strictTemplates": true,
    "strictInjectionParameters": true,
    "fullTemplateTypeCheck": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
}
