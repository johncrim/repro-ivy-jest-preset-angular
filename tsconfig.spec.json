{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/spec",
    "module": "commonjs",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "types": [
      "tslib",
      "jest",
      "node"
    ],
  },
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "karma",
    "**/*.karma-spec.ts",
  ]
}
