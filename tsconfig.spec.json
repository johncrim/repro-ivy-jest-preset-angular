{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/spec",
    "allowJs": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "incremental": false,
    "types": [
      "jest"
    ],
    "paths": {
      "@this/*": [
        "libs/*/src/public-api.ts"
        // "dist/*"
      ]
    }
  },
  "include": [
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "karma",
    "**/*.karma-spec.ts",
  ]
}
